@model FastFitFierce.DAL.Category

@{
    ViewBag.Title = "CreateCategory";
    Layout = "~/Views/Shared/AdminDashboard.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Create Category</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-6">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { placeholder = "Name", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div><br />

        <div class="form-group">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-sm-3 form-control" style="margin-left: 12px;">
                        <label class="control-label">Active</label>
                        @Html.CheckBox("isActive")
                        @Html.ValidationMessageFor(model => model.isActive, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-sm-3 form-control" style="margin-left: 12px;">
                        <label class="control-label">Delete</label>
                        @Html.CheckBox("isDelete")
                        @Html.ValidationMessageFor(model => model.isDelete, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div><br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a href="/Admin/Categories" class="btn btn-danger">Leave</a>
            </div>
        </div>
    </div>
}

