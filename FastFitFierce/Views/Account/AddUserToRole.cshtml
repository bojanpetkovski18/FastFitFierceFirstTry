@model FastFitFierce.Models.AddToRoleModel

@{
    ViewBag.Title = "AddUserToRole";
    Layout = "~/Views/Shared/AdminDashboard.cshtml";
}

<h2>Add User To Role</h2>

@using (Html.BeginForm("AddUserToRole", "Account"))
{
    <div class="form-group">
        <label class="control-label">Email</label>
        @Html.TextBoxFor(m => m.Email, new { @class="form-control" })
    </div>
    
    <div class="form-group">
        @Html.DropDownListFor(m => m.selectedRole, new SelectList(Model.roles), new { @class="form-control" })
    </div>

    <div class="form-group">
        <button class="btn btn-primary" type="submit">Save</button>
    </div>        
}