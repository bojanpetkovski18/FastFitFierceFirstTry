@{
    ViewBag.Title = "Contact us";
}

    <form id="contactForm" action="/Home/Index" style="margin-top: 0px; margin-bottom: 100px;">
        <h1>If you have any difficulties or questions contact us!</h1>
        <p style="text-align: left;
                            margin: 1em;
                            text-transform: capitalize;
                            font-size: 18px;">Contact us via - <i class="fa fa-phone"></i> Phone (NMK) : +389 70-544/455</p>
        <div class="contentform">
            <div id="sendmessage"> Your message has been sent successfully. Thank you. </div>


            <div class="leftcontact">
                <div class="form-group">
                    <p>Surname</p>
                    <span class="icon-case"><i class="fa fa-male"></i></span>
                    <input type="text" name="nom" id="nom" required="required" data-rule="required"/>
                    <div class="validation"></div>
                </div>

                <div class="form-group">
                    <p>Name</p>
                    <span class="icon-case"><i class="fa fa-user"></i></span>
                    <input type="text" name="prenom" id="prenom" required="required" data-rule="required" />
                    <div class="validation"></div>
                </div>

                <div class="form-group">
                    <p>E-mail</p>
                    <span class="icon-case"><i class="fa fa-envelope-o"></i></span>
                    <input type="email" name="email" id="email" required="required" data-rule="email"/>
                    <div class="validation"></div>
                </div>

                <div class="form-group">
                    <p>Company</p>
                    <span class="icon-case"><i class="fa fa-home"></i></span>
                    <input type="text" name="society" id="society" data-rule="required" />
                    <div class="validation"></div>
                </div>

                <div class="form-group">
                    <p>Company Address</p>
                    <span class="icon-case"><i class="fa fa-location-arrow"></i></span>
                    <input type="text" name="adresse" id="adresse" data-rule="required"/>
                    <div class="validation"></div>
                </div>

                <div class="form-group">
                    <p>Postcode</p>
                    <span class="icon-case"><i class="fa fa-map-marker"></i></span>
                    <input type="text" name="postal" id="postal" required="required" data-rule="required" />
                    <div class="validation"></div>
                </div>



            </div>

            <div class="rightcontact">

                <div class="form-group">
                    <p>City</p>
                    <span class="icon-case"><i class="fa fa-building-o"></i></span>
                    <input type="text" name="ville" id="ville" required="required" data-rule="required" />
                    <div class="validation"></div>
                </div>

                <div class="form-group">
                    <p>Phone number</p>
                    <span class="icon-case"><i class="fa fa-phone"></i></span>
                    <input type="text" name="phone" id="phone" required="required" data-rule="maxlen:10"/>
                    <div class="validation"></div>
                </div>

                <div class="form-group">
                    <p>Function <span>*</span></p>
                    <span class="icon-case"><i class="fa fa-info"></i></span>
                    <input type="text" name="fonction" id="fonction" data-rule="required" />
                    <div class="validation"></div>
                </div>

                <div class="form-group">
                    <p>Subject</p>
                    <span class="icon-case"><i class="fa fa-comment-o"></i></span>
                    <input type="text" name="sujet" id="sujet" required="required" data-rule="required" />
                    <div class="validation"></div>
                </div>

                <div class="form-group">
                    <p>Message</p>
                    <span class="icon-case"><i class="fa fa-comments-o"></i></span>
                    <textarea name="message" rows="14" data-rule="required"></textarea>
                    <div class="validation"></div>
                </div>
            </div>

        </div>

        <button type="submit" class="bouton-contact">Send</button>

    </form>	
    